<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profilepage1"
    tools:context=".custom.fragments.profileFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="@string/hello_blank_fragment" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="80dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"

                >

                <ImageView
                    android:id="@+id/proficPic"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <TextView

                    android:id="@+id/userProfilename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Oswald Cobblepot"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:gravity="center"

                    />
                
                <TextView

                    android:id="@+id/userProfileemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" u.anyanwu@dreammesh.ng"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:gravity="center"

                    />


                <TextView

                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="#1776ad"
                    android:textSize="15sp"
                    android:gravity="center"

                    />


                <TextView

                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit profile"
                    android:textColor="#1776ad"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:clickable="true"


                    />

                <!--put android:onclick =""-->




            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="50dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                >


                <Button


                    android:id="@+id/payment_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subscribe"
                    android:textColor="#ffffff"
                    android:background="@drawable/gradient1"/>



            </LinearLayout>







        </LinearLayout>







    </ScrollView>



</FrameLayout>